{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/tally-api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/tally-api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/tally-api-gateway",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "receipts": {
      "type": "application",
      "root": "apps/receipts",
      "entryFile": "main",
      "sourceRoot": "apps/receipts/src",
      "compilerOptions": {
        "tsConfigPath": "apps/receipts/tsconfig.app.json"
      }
    },
    "tally-api-gateway": {
      "type": "application",
      "root": "apps/tally-api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/tally-api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tally-api-gateway/tsconfig.app.json"
      }
    }
  }
}
